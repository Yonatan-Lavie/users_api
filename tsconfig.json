{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/shared-libraries": [
        "src/layers/shared-libraries/nodejs/shared-libraries"
      ],
      "/opt/nodejs/business-logic": [
        "src/layers/business-logic/nodejs/business-logic"
      ]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "cdk.out"]
}
